<configuration>
  <springProfile name="prod">
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="fileAppender">
      <encoder>
        <pattern>
          %n###### HTTP Request ######%n%fullRequest%n###### HTTP Response ######%n%fullResponse%n%n
        </pattern>
      </encoder>

      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>/var/log/application-logs/%d{yyyyMM}/%d{yyyy-MM-dd-HH}.access.log</fileNamePattern>
        <maxHistory>6</maxHistory>
        <totalSizeCap>5GB</totalSizeCap>
      </rollingPolicy>
    </appender>
    <appender-ref ref="fileAppender"/>
  </springProfile>
</configuration>